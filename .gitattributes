# Auto detect text files and perform LF normalization
* text=auto

# Kotlin/Java sources
*.kt text eol=lf
*.kts text eol=lf
*.java text eol=lf
*.gradle text eol=lf
*.md text eol=lf
*.xml text eol=lf
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.properties text eol=lf
*.txt text eol=lf

# Windows scripts
*.bat text eol=crlf
*.cmd text eol=crlf

# Shell scripts
*.sh text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.webp binary
*.svg text
*.pdf binary
*.zip binary
*.jar binary
*.aar binary
*.so binary
*.dll binary
*.dylib binary
*.db binary

# Keystore files (treat as binary and do not diff)
*.jks binary
*.keystore binary
*.p12 binary
*.pfx binary

# Reference images (large binary files, do not diff)
gambar-referensi/* binary
design-assets/* binary
*.psd binary
*.sketch binary
*.fig binary
*.xd binary

# Documentation
docs-private/* binary
*.doc binary
*.docx binary
*.ppt binary
*.pptx binary
*.xls binary
*.xlsx binary
