# Local Configuration Template
# Copy this file to local.properties and fill in your actual values
# DO NOT commit local.properties to version control!

# ============================================================
# ANDROID SDK
# ============================================================

# Path to Android SDK
# Windows: sdk.dir=C\:\\Users\\USERNAME\\AppData\\Local\\Android\\Sdk
# macOS: sdk.dir=/Users/USERNAME/Library/Android/sdk
# Linux: sdk.dir=/home/USERNAME/Android/Sdk
sdk.dir=YOUR_SDK_PATH_HERE

# ============================================================
# NDK (Optional - if using native code)
# ============================================================
ndk.dir=YOUR_NDK_PATH_HERE

# ============================================================
# JAVA HOME (Optional - if using specific JDK)
# ============================================================
# java.home=/Library/Java/JavaVirtualMachines/jdk-17.jdk/Contents/Home

# ============================================================
# SIGNING CONFIGURATION (Local Development)
# ============================================================

# Path to debug keystore (auto-generated by Android Studio)
# DEBUG_KEYSTORE=~/.android/debug.keystore

# Path to release keystore (for local testing only)
# RELEASE_KEYSTORE_PATH=/path/to/your/release.keystore
# RELEASE_KEYSTORE_PASSWORD=your_keystore_password
# RELEASE_KEY_ALIAS=your_key_alias
# RELEASE_KEY_PASSWORD=your_key_password

# ============================================================
# CUSTOM MAVEN REPOSITORIES (Optional)
# ============================================================

# Private Maven repository URL
# PRIVATE_MAVEN_URL=https://maven.yourcompany.com
# PRIVATE_MAVEN_USERNAME=your_username
# PRIVATE_MAVEN_PASSWORD=your_password

# ============================================================
# BUILD OPTIMIZATION
# ============================================================

# Enable Gradle parallel builds
org.gradle.parallel=true

# Enable Gradle daemon
org.gradle.daemon=true

# Configure JVM memory
org.gradle.jvmargs=-Xmx4096m -XX:MaxPermSize=512m

# Enable build cache
android.enableBuildCache=true
